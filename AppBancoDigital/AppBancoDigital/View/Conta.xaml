<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppBancoDigital.View.Conta">
    
    
    <ContentPage.Background>
        <LinearGradientBrush StartPoint="0,1" EndPoint="1,0">
            <GradientStop Color="blue" Offset="0.1" />
            <GradientStop Color="DarkRed" Offset="0.5" />
            <GradientStop Color="#f0f0f0" Offset="1.0" />

        </LinearGradientBrush>
    </ContentPage.Background>


    <ContentPage.Content> 

        <Grid ColumnDefinitions="*" RowDefinitions="200,*,50">



            <Label Grid.Row="0">

                <Label.FormattedText>
                    <FormattedString>
                        <FormattedString.Spans>
                            <Span Text="Seu saldo é de " FontSize="20"/>
                            <Span Text="Et₵ 1.000,00 " TextColor="Red" FontSize="20" />
                        </FormattedString.Spans>
                    </FormattedString>
                </Label.FormattedText>
                
            </Label>

            <StackLayout Grid.Row="1" VerticalOptions="Center">

                <Button x:Name="enviarpix" Text="Enviar o Pix" Clicked="enviarpix_Clicked" />

                <Button x:Name="pixlerqrcode" Text="Ler Qr Code" Clicked="pixlerqrcode_Clicked" />

            </StackLayout>
            <Button x:Name="btn_sair"  Text="sair" Clicked="btn_sair_Clicked" Grid.Row="2"></Button>



        </Grid> 
        
    </ContentPage.Content>

</ContentPage>