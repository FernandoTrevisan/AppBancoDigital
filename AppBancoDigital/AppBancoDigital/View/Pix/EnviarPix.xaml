<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppBancoDigital.View.Pix.EnviarPix">

    <ContentPage.Background>
        <LinearGradientBrush StartPoint="0,1" EndPoint="1,0">
            <GradientStop Color="blue" Offset="0.1" />
            <GradientStop Color="DarkRed" Offset="0.5" />
            <GradientStop Color="#f0f0f0" Offset="1.0" />

        </LinearGradientBrush>
    </ContentPage.Background>
    
    <ContentView.Content>
      <StackLayout>
          
            <Button Text="Gerar QR CODE" Clicked="Button_Clicked" />

            <Label Text="QR CODE VAI APARECER ABAIXO: " TextColor="Black" />

            <Image x:Name="img_qrcode" />
          
        </StackLayout>
  </ContentView.Content>
</ContentView>

  
 