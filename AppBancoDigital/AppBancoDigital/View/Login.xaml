<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppBancoDigital.View.Login"
              Title="Banco Digital" 
              BackgroundColor="WhiteSmoke">
    
    <Grid>
        <StackLayout>

            <StackLayout Padding="90" VerticalOptions="Start" HorizontalOptions="CenterAndExpand">
                <Label Text="LOGIN" FontSize="Title" TextColor="#000" FontAttributes="Bold" />
            </StackLayout>

            <StackLayout VerticalOptions="StartAndExpand">
                <Frame BackgroundColor="Transparent" Margin="20">
                    <StackLayout>
                        <Label Text="E-mail" FontSize="Body" TextColor="#000" HorizontalOptions="Start" />
                        <Entry x:Name="txt_email" Keyboard="Email" ReturnType="Next" ClearButtonVisibility="WhileEditing" />

                        <Label Text="Senha" FontSize="Body" TextColor="#000" HorizontalOptions="Start" />
                        <Entry x:Name="txt_senha" Keyboard="Default" ReturnType="Done" IsPassword="True" ClearButtonVisibility="WhileEditing" />
                    </StackLayout>
                </Frame>

                <Button x:Name="btn_logar" Text="Logar" BackgroundColor="#000" TextColor="#fff"
                        CornerRadius="20" HorizontalOptions="Center"
                        />


                <Label Text="Caso não tenha uma conta." HorizontalOptions="CenterAndExpand" TextColor="Black" Margin="20" />


                <Button x:Name="btn_criar" Text="Criar uma conta"  
                        FontAttributes="None" TextTransform="Uppercase"
                        BackgroundColor="Transparent" TextColor="Black"
                        CornerRadius="20" HorizontalOptions="Center"
                        Clicked="btn_criar_Clicked" 
                        />

            </StackLayout>

        </StackLayout>
    </Grid>

</ContentPage>